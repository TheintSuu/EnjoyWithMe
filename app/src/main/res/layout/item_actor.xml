<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin_medium_2"
    android:background="@color/colorFragment"
    android:layout_margin="@dimen/margin_medium"
    >
    <RelativeLayout
        android:layout_margin="@dimen/margin_medium"
        android:layout_width="wrap_content"
        android:background="@color/colorFragment"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ivActorImage"
            android:layout_width="185dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/actor" />

        <TextView
            android:id="@+id/tvActorName"
            style="@style/GrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvDate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Leonardo DiCaprio"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnLike"
            style="@style/GrayText"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignStart="@id/tvActorName"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:src="@drawable/ic_baseline_thumb_up_24"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvDate"
            style="@style/GrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvActorName"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="13dp"
            android:layout_toEndOf="@id/btnLike"
            android:text="You Like this MOVIES"
            android:textColor="@android:color/white"
            android:textSize="10sp" />


    </RelativeLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_favorite_24"
        android:id="@+id/btnFavourite"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_gravity="top|end"
        android:elevation="@dimen/margin_small"
        />


</androidx.cardview.widget.CardView>
